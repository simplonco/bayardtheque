<div class="container">
<h1>Ajouter un livre</h1>
<br>
<div class="well">
<%= form_for Book.new, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :titre, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :auteur, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :author, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Lien image', class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :note, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :note, class: 'form-control', rows: 6 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= link_to 'Annuller', root_path, class: 'btn btn-lg btn-danger' %>
      <%= f.submit 'Ajouter',class: 'btn btn-lg btn-info' %>
    </div>
  </div>

<% end %>
</div>
<br>
</div>
